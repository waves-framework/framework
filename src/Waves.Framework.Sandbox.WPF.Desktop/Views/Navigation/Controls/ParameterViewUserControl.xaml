<UserControl x:Class="Waves.Framework.Sandbox.WPF.Desktop.Views.Navigation.Controls.ParameterViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Waves.Framework.Sandbox.WPF.Desktop.Views.Navigation.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Margin="24,18">
        
        <StackPanel>
            
            <TextBlock Text="{Binding Parameter}"
                       Height="34"
                       Margin="0,0,0,12"/>
        
            <Button Content="Go back"
                    Command="{Binding GoBackCommand}"
                    Height="34"
                    HorizontalAlignment="Stretch"/>
            
        </StackPanel>
        
    </Grid>
    
</UserControl>
